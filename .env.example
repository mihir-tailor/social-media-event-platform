# ============================================
# INGESTION SERVICE CONFIGURATION
# ============================================
INGESTION_HOST=0.0.0.0
INGESTION_PORT=8000
INGESTION_DEBUG=false
LOG_LEVEL=INFO

# ============================================
# KAFKA CONFIGURATION
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=social-events
KAFKA_PRODUCER_ACKS=1
KAFKA_PRODUCER_RETRIES=3
KAFKA_PRODUCER_COMPRESSION_TYPE=snappy
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=10
KAFKA_MAX_OFFSETS_PER_TRIGGER=10000

# Kafka Security (Optional)
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# ============================================
# SPARK STREAMING CONFIGURATION
# ============================================
SPARK_MASTER=local[*]
SPARK_LOG_LEVEL=WARN
CHECKPOINT_LOCATION=/tmp/spark-checkpoints
TRIGGER_INTERVAL=30 seconds
WATERMARK_DELAY=10 minutes

# ============================================
# AWS S3 CONFIGURATION
# ============================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=social-media-events
S3_RAW_EVENTS_PREFIX=raw-events
S3_ENABLE_PARTITIONING=true
ENABLE_S3_WRITE=true

# ============================================
# MYSQL CONFIGURATION
# ============================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=social_media_analytics
MYSQL_USER=root
MYSQL_PASSWORD=password
DB_POOL_SIZE=10
ENABLE_MYSQL_WRITE=true

# ============================================
# ANALYTICS SERVICE CONFIGURATION
# ============================================
ANALYTICS_HOST=0.0.0.0
ANALYTICS_PORT=8001
ANALYTICS_DEBUG=false

# ============================================
# MONITORING & METRICS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10000